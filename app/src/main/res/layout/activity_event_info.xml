<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <com.dilpreet2028.devents.Utils.MyScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/scrollview"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:id="@+id/event_info_pic"
                    android:scaleType="fitXY"
                    />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_card"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="@dimen/activity_vertical_margin"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Event Name"
                android:id="@+id/event_info_name"
                android:textSize="30sp"
                android:textAppearance="?android:textAppearanceLarge"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Event Location"
                    android:layout_marginTop="@dimen/card_margin"
                    android:id="@+id/event_info_location"
                    android:textColor="@android:color/darker_gray"
                    android:textAppearance="?android:textAppearanceMedium"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:text="desc"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:padding="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:background="@android:color/white"
                    android:id="@+id/event_info_desc"
                    />

            </LinearLayout>
            </android.support.v7.widget.CardView>
            <fragment
                android:layout_width="match_parent"
                android:layout_height="300dp"

                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_weight="1"
                android:id="@+id/event_map"/>
        </LinearLayout>

    </com.dilpreet2028.devents.Utils.MyScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Going"
            android:gravity="center"
            android:layout_marginTop="@dimen/card_margin"
            android:id="@+id/event_info_going"
            android:layout_marginRight="@dimen/text_margin"
            android:textAppearance="?android:textAppearanceLarge"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="Interested"
            android:gravity="center"
            android:layout_marginTop="@dimen/card_margin"
            android:id="@+id/event_info_interested"
            android:textAppearance="?android:textAppearanceLarge"/>
    </LinearLayout>
</LinearLayout>
